<div class="timeline">
  {% if site.timeline != blank %}
    {% assign timeline_size = site.timeline | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and timeline_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign timeline = site.timeline | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign timeline_limit = site.announcements.limit %}
        {% else %}
          {% assign timeline_limit = timeline_size %}
        {% endif %}
        {% for item in timeline limit: timeline_limit %}
          <tr>
            <!-- <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th> -->
            <th scope="row" style="width: 20%">
              <div>{{ item.date | date: '%b %Y' }}</div>
              <div>{{ item.start_date | date: '- %b %Y' }}</div>
            </th>

            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="timeline-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No timeline so far...</p>
  {% endif %}
</div>
